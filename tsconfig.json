{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "outDir": "build",
    "moduleResolution": "nodenext"
  },
  "include": ["src"]
}
